# general error handling for commands
@bot.command()
async def on_command(ctx, error):
    if isinstance(error, commands.BotMissingPermissions):
        await ctx.send("You don't not have the required permissions to execute this command.")

        


#embed command
@bot.command()
async def embed(ctx):
    embed = discord.Embed(title="Sample Embed", url="", description="This is an example of an embedded message.", color=0x008000)
    embed.set_author(name="MyBot", url="", icon_url="https://i.imgur.com/rdm3W9t.png")
    embed.set_thumbnail(url="https://i.imgur.com/rdm3W9t.png")
    embed.add_field(name="Field 1", value="This is the value for field 1.", inline=False)
    embed.add_field(name="Field 2", value="This is the value for field 2.", inline=True)
    embed.add_field(name="Field 3", value="This is the value for field 3.", inline=True)
    embed.set_footer(text="This is the footer text.", icon_url="https://i.imgur.com/rdm3W9t.png")
    await ctx.send(embed=embed)

        
# direct message command
@bot.command()
async def message(ctx, user:discord.Member, *, message=None):
    message = "Welcome to the server!" #if message is None else message
    embed = discord.Embed(title=message)
    await user.send(embed=embed)





bot.run(TOKEN) 
